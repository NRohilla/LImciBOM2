<script>
    var IsOppClosed = true;

    $('a[data-attr=BOM_SalesStatusAnchor]').each(function (index, value) {
        if ($(this).attr('data-salesstatus') != 'Closed') {
            IsOppClosed = false;
            return false;
        }
    });

    //If the Opp is closed
    if (IsOppClosed) {
        $('#AnchAllBoms').css('display', 'none');
        $('#AnchOnlyActiveBoms').css('display', 'none');
    }

    function SetDeleteAttributes(BOM, OPP, VERSION) {
        debugger;

        $('#btnDeleteBOM').attr('data-bomid', BOM);
        $('#btnDeleteBOM').attr('data-OppID', OPP);
        $('#btnDeleteBOM').attr('data-VersionNum', VERSION);
    }
    function AddNewBom(BOMID, oppurtunityID, ActivateNew) {
        debugger;
        $('#ADDBOMModal_ActiveConfirm').modal('hide');
        $.ajax({
            type: 'post',
            dataType: 'json',
            url: '/quote/AddNewBOM',
            data: { "BOMID": BOMID, "oppurtunityID": oppurtunityID, "ActivateNew": ActivateNew },
            success: function (r) {
                if (r === "BOM deleted Successfully") {
                    location.reload();
                }
                else {
                    $('#error').text(r)
                    ErrorAlert();
                }
            }
        });
    }

    function SetActivateInActivate_Attributes(BOM, OPP, VERSION) {
        debugger;
        $('#btnActivateInActivate_BOM').attr('data-bomid', BOM);
        $('#btnActivateInActivate_BOM').attr('data-OppID', OPP);
        $('#btnActivateInActivate_BOM').attr('data-VersionNum', VERSION);

    }
    $(document).ready(function () {

        $('#btnDeleteBOM').click(function () {
            debugger;
            var ID = 'tr_' + $(this).attr('data-bomid') + '_' + $(this).attr('data-OppID') + '_' + $(this).attr('data-VersionNum');
            $.ajax({
                type: 'post',
                dataType: 'json',
                url: '/quote/DeleteBOM',
                data: { "BOMID": $(this).attr('data-bomid'), oppurtunityID: $(this).attr('data-OppID'), VersionNum: $(this).attr('data-VersionNum') },
                success: function (r) {
                    if (r === "BOM deleted Successfully") {
                        $("#DeleteBOMModal").modal('hide');

                        $('#' + ID).css('display', 'none');
                    }
                    else {
                        $('#error').text(r)
                        ErrorAlert();
                    }
                }
            });
        });

        //button add BOM click
        $('#btnAddNewBOM').click(function () {
            debugger;
            var CanAdd = true;
            var SelectedBOMToAdd = $('#SelectBOMs').val();// The BOM ID which the user is trying to add
            var SelectedOpprtID = 0; // The Oppurtunity ID for the BOM
            var SelectedBOMGridStatus = "";// The status of the BOM type user trying to add

            //Grid Sales Status column's Anchor
            $('a[data-attr="BOM_SalesStatusAnchor"]').each(function (ind, val) {
                SelectedOpprtID = $(this).attr('data-OpprID');
                if ($(this).attr('data-BOMID') === SelectedBOMToAdd) {
                    SelectedBOMGridStatus = $(this).attr('data-SalesStatus').trim();
                    if (SelectedBOMGridStatus.trim().toLowerCase() === "new") {
                        CanAdd = false;
                        return false;
                    }
                }
            });

            //hide the current Add modal
            $("#ADDBOMModal").modal('hide');

            if (SelectedBOMGridStatus == "New")
                alert('Please save the existing New BOM before adding another one of same type!');

            if (SelectedBOMGridStatus == "Closed")
                alert('The Oppurtunity is already closed!');


            //show the confirm Add Modal
            if (CanAdd) {
                $('#ADDBOMModal_ActiveConfirm').modal('show');

                //set the BOM + Opp ID in attr of YES+NO Button to be sent to the back end
                $('#btnAddNewBOM_ActiveConfirmYes').attr('data-BOMID', SelectedBOMToAdd);
                $('#btnAddNewBOM_ActiveConfirmYes').attr('data-OppID', SelectedOpprtID);
                $('#btnAddNewBOM_ActiveConfirmNo').attr('data-BOMID', SelectedBOMToAdd);
                $('#btnAddNewBOM_ActiveConfirmNo').attr('data-OppID', SelectedOpprtID);
                return false;
            }
        });

        //button add BOM confirm click yes for activating New BOM
        $('#btnAddNewBOM_ActiveConfirmYes').click(function () {
            AddNewBom($(this).attr('data-BOMID'), $(this).attr('data-OppID'), "Yes");
        });

        //button add BOM confirm click No for not activating New BOM
        $('#btnAddNewBOM_ActiveConfirmNo').click(function () {
            AddNewBom($(this).attr('data-BOMID'), $(this).attr('data-OppID'), "No");
        });

        $('#btnActivateInActivate_BOM').click(function () {
            debugger;
            var ID = 'tr_' + $(this).attr('data-bomid') + '_' + $(this).attr('data-OppID') + '_' + $(this).attr('data-VersionNum');

            $.ajax({
                type: 'post',
                dataType: 'json',
                url: '/quote/ChangeActiveStatusBOM',
                data: { "BOMID": $(this).attr('data-bomid'), oppurtunityID: $(this).attr('data-OppID'), VersionNum: $(this).attr('data-VersionNum') },
                success: function (r) {
                    if (r === "BOM updated Successfully") {
                        $("#ActivateInActivate_BOMModal").modal('hide');
                        location.reload();
                        //$('#' + ID).css('display', 'none');
                    }
                    else {
                        $('#error').text(r)
                        ErrorAlert();
                    }
                }
            });
        });

        $('#AnchAllBoms').click(function () {
            $('#AnchAllBoms').css('display', 'none');
            $('#AnchOnlyActiveBoms').css('display', '');

            $('a[data-attr=BOM_SalesStatusAnchor]').each(function (index, value) {
                //Show all the rows
                var ID = 'tr_' + $(this).attr('data-bomid') + '_' + $(this).attr('data-opprid') + '_' + $(this).attr('data-versionnum');
                $('#' + ID).css('display', '');
            });
        });

        $('#AnchOnlyActiveBoms').click(function () {
            $('#AnchAllBoms').css('display', '');
            $('#AnchOnlyActiveBoms').css('display', 'none');

            $('a[data-attr=BOM_SalesStatusAnchor]').each(function (index, value) {
                //Show all the rows
                var ID = 'tr_' + $(this).attr('data-bomid') + '_' + $(this).attr('data-opprid') + '_' + $(this).attr('data-versionnum');
                $('#' + ID).css('display', '');

                if ($(this).attr('data-isactive') != 'True')
                    $('#' + ID).css('display', 'none');//Hide only the Inactive Rows

            });

        });

    });//document ends
</script>