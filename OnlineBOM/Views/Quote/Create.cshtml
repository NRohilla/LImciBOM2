@section Scripts{

    <script type="text/javascript">



        $("#btnSave").click(function () {

             var data = $("#Submitform").serialize();
             $.ajax({
                type: "Post",
                url: "/Quote/CreateLead",
                data: data,
                success: function (result) {
                    if (result === true) { toastr.success('Record Saved Sucessfully', 'Sucess', { timeOut: 2000 }); } else { toastr.error('Unable to Save the Record', 'Failed', {timeOut:2000}); };

                   // if (result === true) { toastr.success('sucess', 'sucess', { timeout: 30000 }); } else { toastr.error('Failed', 'Failed', { timeout: 30000 });};

